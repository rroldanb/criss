---
import projects from '@data/projects.json'

---
<h2 class="font-bold text-5xl my-8 text-center">Casos de Éxito</h2>
{
    projects.map((project, index) => (
        
        <div 
            class={`flex text-justify md:text-left md:my-8 flex-col  ${index % 2 !== 0 ? 'md:flex-row-reverse' : 'md:flex-row'} rounded-lg py-4 h-[100vh] md:h-auto ${index % 2 !== 0 ? 'bg-gradient-to-r from-teal-800 to-green-800' : 'bg-gradient-to-r from-purple-800 to-teal-800'}`}
        >
            <div class="flex-2">
                <img src={project.image} alt={`Imagen ${project.title}`} class="w-40 md:w-60 m-auto" />
            </div>
            <div class={`flex-1 px-8 ${project.textColor}`}>
                <h2 class="text-2xl font-bold my-4">{project.title}</h2>
                <p class="my-2 text-pretty">{project.description}</p>
                <div class="flex justify-center md:justify-start">
                    <button class="bg-purple-800 hover:bg-purple-700 py-2 px-4 my-4 rounded-full">
                        Saber Más
                    </button>
                </div>
            </div>
        </div>
    ))
}

